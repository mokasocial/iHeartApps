<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:gravity="center"
	android:background="@drawable/nav_bg">
	
	<ImageView
		android:id="@+id/iheart_logo"
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:src="@drawable/iheartapple_small_logo"
		android:scaleType="center"
		android:paddingLeft="7dp"
	/>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="right">
		
	    <ImageButton
	    	android:id="@+id/btn_nav_news" 
	        android:layout_width="wrap_content" 
	        android:layout_height="wrap_content" 
	        android:src="@drawable/nav_icon_news"
	        android:scaleType="center"
	        android:paddingTop="8dp"
	        android:paddingRight="13dp"
	        android:paddingLeft="13dp"
	        android:paddingBottom="8dp"
	        android:minWidth="45dp"
	        android:background="@drawable/nav_btn"
	    />
	
	    <ImageButton 
	    	android:id="@+id/btn_nav_media" 
	    	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:src="@drawable/nav_icon_images"
	        android:scaleType="center"
	        android:paddingTop="8dp"
	        android:paddingRight="13dp"
	        android:paddingLeft="13dp"
	        android:paddingBottom="8dp"
	        android:minWidth="45dp"
	        android:background="@drawable/nav_btn"
	    />
	    
	    <ImageButton 
	    	android:id="@+id/btn_nav_search" 
	    	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:src="@drawable/nav_icon_media"
	        android:scaleType="center"
	        android:paddingTop="8dp"
	        android:paddingRight="13dp"
	        android:paddingLeft="13dp"
	        android:paddingBottom="8dp"
	        android:minWidth="45dp"
	        android:background="@drawable/nav_btn"
	    />
	    
	    <ImageButton 
	    	android:id="@+id/btn_nav_favorites" 
	    	android:layout_width="wrap_content" 
	        android:layout_height="wrap_content"
	        android:src="@drawable/nav_icon_favorites"
	        android:scaleType="center"
	        android:paddingTop="8dp"
	        android:paddingRight="13dp"
	        android:paddingLeft="13dp"
	        android:paddingBottom="8dp"
	        android:minWidth="45dp"
	        android:background="@drawable/nav_btn"
	    />
	    
    </LinearLayout>
    
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip"
    style="@style/list_post_item">
    
    <ImageView
    	android:id="@+id/favorited"
    	android:src="@drawable/icon_heart_small"
    	style="@style/list_post_type_icon"
    />
    
	<TextView
		android:id="@+id/news_title"
		style="@style/list_post_title"
	/>
	
	<TextView
		android:id="@+id/news_description"
		android:layout_below="@id/news_title"
		style="@style/list_post_desc"
	/>
	
	<TextView
    	android:id="@+id/news_date"
    	android:text=""
    	android:layout_below="@id/news_description"
    	style="@style/list_post_meta"
    />
	
</RelativeLayout>
